@using MoviesApp.Models.Actors
@model IQueryable<ActorViewModel>

@{
    ViewBag.Title = "Actors";
}

<div class="jumbotron">
    <h1>Best Actors are Here</h1>
</div>
<div class="row">
    @foreach (ActorViewModel actor in Model)
    {
        <div class="col-md-4">
            <h1><a href="~/Actor/Details/@actor.Id">@actor.Name</a></h1>
            <p>At @actor.Age still making the best movies with @actor.Studio in @actor.Address</p>
        </div>
    }
</div>
