@using MoviesApp.Models.Movie
@model MovieViewModel

@{
    ViewBag.Title = Model.Title;
}

<div class="jumbotron">
    <h1>@Model.Title</h1>
</div>
<div class="row">
    <p>One move by <strong>@Model.Director</strong> made in @Model.Year</p>
    <p>
        with <strong><a href="~/Actor/Details/@Model.LeadingMaleRoleId">@Model.LeadingMaleRole</a></strong> and
        the beautifull <strong><a href="~/Actress/Details/@Model.LeadingFemaleRoleId">@Model.LeadingFemaleRole</strong>
    </p>
</div>
<div class="row">
    <a href="~/Movie/Update/@Model.Id" class="btn btn-default">Update</a>
    <a href="~/Movie/Delete/@Model.Id" class="btn btn-default">Delete</a>
    <a href="~/Movie/ViewAll" class="btn btn-default">Back to movies</a>
</div>