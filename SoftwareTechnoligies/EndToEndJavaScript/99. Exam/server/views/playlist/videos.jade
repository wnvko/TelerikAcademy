extends ../shared/layout
block main-content
    .container
        .row
            .col-md-6.col-md-offset-3
                h1.text-center Play List #{data.title} Videos
                br
                form(method="post")
                    label(for="name") Name
                    input(id="name" class="form-control" type="text" name="name" placeholder="Name")
                    br
                    label(for="link") Address
                    input(id="link" class="form-control" type="text" name="link" placeholder="Address")
                    br
                    input(type="submit" class="btn btn-lg" value="Add New Video")
                table.table-bordered.table
                    tr
                        th Name
                        th Play
                        th Delete
                    each video in data.videos
                        tr
                            td #{video.name}
                            td
                                a.btn.btn-lg.btn-primary(href="video.link") View
